<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.budgetcontrol">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.BudgetControl">
        <activity android:name=".MonthDays"
            android:label="Days"
            android:parentActivityName=".MonthlyActivity" >

        </activity>
        <activity
            android:name=".MonthlyActivity"
            android:label="Monthly Expenses"
            android:parentActivityName=".MainActivity"></activity>
        <activity
            android:name=".TodayActivity"
            android:label="Today&apos;s Entry"
            android:parentActivityName=".MainActivity" />
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>